<h1 style="text-align: center"><img src="../assets/images/burgerphoto.png" alt="burgerphoto" class="burgerphoto" width="300" height="300"></h1>

<h1 class="title" style="text-align: center">Eat-Da-Burger!!</h1>

<div class="container-fluid" style="align-items: center">
  <form class="create-form" id="burgers">
    <div class="row">
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <p>{{this.burger_name}}</p>
          <button id="devourBtn" class="devour" type="submit">Devour</button>
          <div class="col-md-6" </li>
            {{/unless}}
            {{/each}}
      </ul>
      <div class="row">
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <h3>Devoured!</h3>
            <p>{{this.burger_name}}</p>
            <div class="col-md-6">
          </li>
          {{/if}}
          {{/each}}
      </div>
    </div>
    <div class="container">
      <div class="form-group">
        <div class="row" <label for="ca">Add a Burger to Devour: </label>
          <input type="text" id="add" name="name">
        </div>
        <button type="submit">Add</button>
      </div>
    </div>
  </form>